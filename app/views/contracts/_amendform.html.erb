<style>
    .bottom-align {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        height: 100%;
    }

    .no-pointer-events {
      pointer-events: none;
      background-color: #f5f5f5; /* 使其看起来被禁用 */
